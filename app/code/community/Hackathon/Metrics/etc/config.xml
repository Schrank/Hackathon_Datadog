<config>
    <modules>
        <Hackathon_Metrics>
            <version>0.1.0</version>
        </Hackathon_Metrics>
    </modules>
    <global>
        <helpers>
            <hackathon_metrics>
                <class>Hackathon_Metrics_Helper</class>
            </hackathon_metrics>
        </helpers>
        <models>
            <hackathon_metrics>
                <class>Hackathon_Metrics_Model</class>
            </hackathon_metrics>
        </models>

        <events>

            <sales_order_place_after>
                <observers>
                    <hackathon_metrics_sales_order_place_after>
                        <class>hackathon_metrics/observer_sales</class>
                        <method>salesOrderPlaceAfter</method>
                    </hackathon_metrics_sales_order_place_after>
                </observers>
            </sales_order_place_after>

        </events>
    </global>
    <frontend>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <hackathon_metrics>
                        <class>hackathon_metrics/observer</class>
                        <method>test</method>
                    </hackathon_metrics>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </frontend>
</config>